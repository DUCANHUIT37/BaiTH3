<Window x:Class="CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="400" Width="350"
        ResizeMode="CanMinimize">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="Edit"/>
            <MenuItem Header="View"/>
            <MenuItem Header="Help"/>
        </Menu>

        <TextBox Grid.Row="1" x:Name="DisplayTextBox"
                 Height="40" Margin="10,10,10,5"
                 FontSize="20" TextAlignment="Right"
                 IsReadOnly="True" Text="0"
                 VerticalContentAlignment="Center"
                 Background="White" BorderBrush="#CCCCCC" BorderThickness="1"/>

        <Grid Grid.Row="2" Margin="10,5,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="" Margin="2" Background="#E0E0E0"/>
            <Button Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="Backspace" 
                    Margin="2" Background="#FFE6E6" Foreground="Red" FontWeight="Bold"
                    Click="Backspace_Click"/>
            <Button Grid.Row="0" Grid.Column="3" Content="CE" Margin="2" Background="White"
                    Click="CE_Click"/>
            <Button Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Content="C" Margin="2" 
                    Background="White" Click="C_Click"/>

            <Button Grid.Row="1" Grid.Column="0" Content="MC" Margin="2" 
                    Background="White" Foreground="Red" FontWeight="Bold"
                    Click="MC_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="7" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Content="8" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="1" Grid.Column="3" Content="9" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="1" Grid.Column="4" Content="/" Margin="2" 
                    Background="White" FontSize="16" Click="Operator_Click"/>
            <Button Grid.Row="1" Grid.Column="5" Content="sqrt" Margin="2" 
                    Background="White" Foreground="Blue" Click="Sqrt_Click"/>
            <Button Grid.Row="2" Grid.Column="0" Content="MR" Margin="2" 
                    Background="White" Foreground="Red" FontWeight="Bold"
                    Click="MR_Click"/>
            <Button Grid.Row="2" Grid.Column="1" Content="4" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Content="5" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="2" Grid.Column="3" Content="6" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="2" Grid.Column="4" Content="*" Margin="2" 
                    Background="White" FontSize="16" Click="Operator_Click"/>
            <Button Grid.Row="2" Grid.Column="5" Content="%" Margin="2" 
                    Background="White" Foreground="Blue" Click="Percent_Click"/>
            <Button Grid.Row="3" Grid.Column="0" Content="MS" Margin="2" 
                    Background="White" Foreground="Red" FontWeight="Bold"
                    Click="MS_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content="1" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Content="2" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="3" Grid.Column="3" Content="3" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="3" Grid.Column="4" Content="-" Margin="2" 
                    Background="White" FontSize="16" Click="Operator_Click"/>
            <Button Grid.Row="3" Grid.Column="5" Content="1/x" Margin="2" 
                    Background="White" Foreground="Blue" Click="Reciprocal_Click"/>
            <Button Grid.Row="4" Grid.Column="0" Content="M+" Margin="2" 
                    Background="White" Foreground="Red" FontWeight="Bold"
                    Click="MPlus_Click"/>
            <Button Grid.Row="4" Grid.Column="1" Content="0" Margin="2" 
                    Background="White" FontSize="16" Click="Number_Click"/>
            <Button Grid.Row="4" Grid.Column="2" Content="+/-" Margin="2" 
                    Background="White" Click="PlusMinus_Click"/>
            <Button Grid.Row="4" Grid.Column="3" Content="." Margin="2" 
                    Background="White" FontSize="16" Click="Decimal_Click"/>
            <Button Grid.Row="4" Grid.Column="4" Content="+" Margin="2" 
                    Background="White" FontSize="16" Click="Operator_Click"/>
            <Button Grid.Row="4" Grid.Column="5" Content="=" Margin="2" 
                    Background="#E6F2FF" Foreground="Red" FontWeight="Bold" FontSize="16"
                    Click="Equals_Click"/>
        </Grid>
    </Grid>
</Window>