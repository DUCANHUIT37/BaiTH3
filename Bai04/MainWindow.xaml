<Window x:Class="Bai4_MenuColorDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bài 4: Menu và ColorDialog" Height="450" Width="600">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Format">
                <MenuItem Header="Color" Click="ColorMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Grid x:Name="mainGrid" Background="Beige">
            <Border x:Name="colorPickerDialog" 
                    Background="#CC000000" 
                    Visibility="Collapsed">
                <Border Background="White" 
                        Width="300" 
                        Height="250"
                        CornerRadius="5"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Chọn màu:" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        <UniformGrid Columns="4" Rows="3">
                            <Button Background="Red" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Green" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Blue" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Yellow" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Orange" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Purple" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Pink" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Brown" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Gray" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Black" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="White" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                            <Button Background="Cyan" Width="50" Height="50" Margin="5" Click="SelectColor_Click"/>
                        </UniformGrid>

                        <Button Content="Hủy" 
                                Width="80" 
                                Margin="0,15,0,0" 
                                Click="CancelColor_Click"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </DockPanel>
</Window>