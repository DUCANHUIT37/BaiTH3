<Window x:Class="BankAccountApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Tài Khoản" Height="550" Width="650"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="15" Margin="10,10,10,5">
            <TextBlock Text="QUẢN LÝ THÔNG TIN TÀI KHOẢN" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#0066CC"/>
        </Border>

        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" 
                BorderThickness="1" Margin="10,5,10,5" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <TextBlock Grid.Row="0" Grid.Column="0" Text="Số tài khoản" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="AccountNumberTextBox" 
                         Height="25" Margin="5" VerticalContentAlignment="Center"/>


                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên khách hàng" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="CustomerNameTextBox" 
                         Height="25" Margin="5" VerticalContentAlignment="Center"/>


                <TextBlock Grid.Row="2" Grid.Column="0" Text="Địa chỉ khách hàng" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="AddressTextBox" 
                         Height="25" Margin="5" VerticalContentAlignment="Center"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Số tiền trong tài khoản" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="BalanceTextBox" 
                         Height="25" Margin="5" VerticalContentAlignment="Center"/>


                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="AddUpdateButton" Content="Thêm / Cập Nhật" 
                            Width="130" Height="30" Margin="5" 
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                            Click="AddUpdate_Click"/>
                    <Button x:Name="DeleteButton" Content="Xóa" 
                            Width="100" Height="30" Margin="5" 
                            Background="#F44336" Foreground="White" FontWeight="Bold"
                            Click="Delete_Click"/>
                    <Button x:Name="ClearButton" Content="Thoát" 
                            Width="100" Height="30" Margin="5" 
                            Background="#9E9E9E" Foreground="White" FontWeight="Bold"
                            Click="Clear_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="White" BorderBrush="#CCCCCC" 
                BorderThickness="1" Margin="10,5,10,5">
            <ListView x:Name="AccountListView" SelectionChanged="AccountListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="STT" Width="50" 
                                        DisplayMemberBinding="{Binding STT}"/>
                        <GridViewColumn Header="Mã tài khoản" Width="120" 
                                        DisplayMemberBinding="{Binding AccountNumber}"/>
                        <GridViewColumn Header="Tên khách hàng" Width="150" 
                                        DisplayMemberBinding="{Binding CustomerName}"/>
                        <GridViewColumn Header="Địa chỉ" Width="200" 
                                        DisplayMemberBinding="{Binding Address}"/>
                        <GridViewColumn Header="Số tiền" Width="100" 
                                        DisplayMemberBinding="{Binding BalanceFormatted}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Border Grid.Row="3" Background="White" BorderBrush="#CCCCCC" 
                BorderThickness="1" Margin="10,5,10,10" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Tổng tiền:" FontSize="14" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="TotalAmountTextBox" Width="200" Height="25" 
                         IsReadOnly="True" FontSize="14" FontWeight="Bold"
                         VerticalContentAlignment="Center" TextAlignment="Right"
                         Background="#E3F2FD" BorderBrush="#2196F3"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>