<Window x:Class="StudentEntryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nhập Liệu Sinh Viên" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Mã Sinh Viên"/>
        <TextBox Grid.Row="0" x:Name="txtMSSV" Margin="120,0,0,5" HorizontalAlignment="Left" Width="200"/>

        <Label Grid.Row="1" Content="Họ Tên"/>
        <TextBox Grid.Row="1" x:Name="txtHoTen" Margin="120,0,0,5" HorizontalAlignment="Left" Width="200"/>

        <Label Grid.Row="2" Content="Chuyên Ngành"/>
        <ComboBox Grid.Row="2" x:Name="cmbChuyenNganh" Margin="120,0,0,5" HorizontalAlignment="Left" Width="200">
            <ComboBoxItem Content="Hệ Thống Thông Tin"/>
            <ComboBoxItem Content="Công Nghệ Phần Mềm"/>
            <ComboBoxItem Content="Khoa Học Máy Tính"/>
        </ComboBox>

        <Label Grid.Row="3" Content="Giới Tính"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="120,0,0,5">
            <RadioButton x:Name="rbNam" Content="Nam" Margin="0,0,10,0"/>
            <RadioButton x:Name="rbNu" Content="Nữ"/>
        </StackPanel>
        <Label Grid.Row="4" Content="Chọn Các Môn Học Tham Gia"/>
        <ListBox Grid.Row="4" x:Name="lstMonHoc" Margin="120,0,0,5" HorizontalAlignment="Left" Width="300" Height="100" SelectionMode="Multiple">
            <ListBoxItem Content="Cơ sở dữ liệu"/>
            <ListBoxItem Content="Cơ sở dữ liệu nâng cao"/>
            <ListBoxItem Content="Phân tích thiết kế hệ thống thông tin"/>
            <ListBoxItem Content="Lập trình web"/>
            <ListBoxItem Content="Trí tuệ nhân tạo"/>
        </ListBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="btnLuu" Content="Lưu Thông Tin" Width="120" Margin="0,0,10,0" Click="btnLuu_Click"/>
            <Button x:Name="btnXoaChon" Content="Xóa Chọn" Width="120" Click="btnXoaChon_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="6" x:Name="dgSinhVien" AutoGenerateColumns="False" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="MSSV" Binding="{Binding MSSV}" Width="100"/>
                <DataGridTextColumn Header="Họ Tên" Binding="{Binding HoTen}" Width="150"/>
                <DataGridTextColumn Header="Chuyên Ngành" Binding="{Binding ChuyenNganh}" Width="150"/>
                <DataGridTextColumn Header="Giới Tính" Binding="{Binding GioiTinh}" Width="100"/>
                <DataGridTextColumn Header="Số Môn" Binding="{Binding SoMon}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>