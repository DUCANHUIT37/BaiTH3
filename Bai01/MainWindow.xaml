<Window x:Class="Bai01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bài 1 - Vòng đời Form" Height="500" Width="700"
        Loaded="Window_Loaded"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated"
        Closing="Window_Closing"
        Closed="Window_Closed"
        StateChanged="Window_StateChanged"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="MINH HỌA CÁC SỰ KIỆN TRONG VÒNG ĐỜI CỦA FORM" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"
                   Foreground="#2C3E50"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Minimize" Width="100" Margin="5" Click="MinimizeButton_Click"
                    Background="#3498DB" Foreground="White" Padding="10,5"/>
            <Button Content="Maximize" Width="100" Margin="5" Click="MaximizeButton_Click"
                    Background="#2ECC71" Foreground="White" Padding="10,5"/>
            <Button Content="Restore" Width="100" Margin="5" Click="RestoreButton_Click"
                    Background="#F39C12" Foreground="White" Padding="10,5"/>
            <Button Content="Clear Log" Width="100" Margin="5" Click="ClearButton_Click"
                    Background="#E74C3C" Foreground="White" Padding="10,5"/>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="txtLog" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap"
                         Background="#ECF0F1"
                         FontFamily="Consolas"
                         FontSize="12"
                         Padding="10"/>
            </ScrollViewer>
        </Border>

        <TextBlock Grid.Row="3" Margin="0,10,0,0" TextAlignment="Center" 
                   Foreground="#7F8C8D" FontStyle="Italic">
            <Run Text="Hãy thử: Minimize, Maximize, di chuyển, thay đổi kích thước window để xem các sự kiện"/>
        </TextBlock>
    </Grid>
</Window>